# Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Environment
# Options: local, codespaces, production
APP_ENV=local

# Debug mode (1 for True, 0 for False)
DEBUG=1

# Django Secret Key (generate a new one for production)
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Database Configuration
# Option 1: Use DATABASE_URL (recommended)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# Option 2: Use individual database settings
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# For local development
# DATABASE_URL_LOCAL=postgresql://username:password@localhost:5432/your_local_db

# For GitHub Codespaces
# DATABASE_URL_CODESPACES=postgresql://username:password@host:port/database_name

# AWS S3 Configuration
USE_S3=FALSE
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your-static-bucket-name
AWS_MEDIA_BUCKET_NAME=your-media-bucket-name

# Production Settings (only needed in production)
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
